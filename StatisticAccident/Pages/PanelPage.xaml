<Page x:Class="StatisticAccident.Pages.PanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StatisticAccident.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PanelPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="btnStart" Content="Start" Click="btnStart_Click" Grid.Row="0"
                Height="30"/>

        <ScrollViewer CanContentScroll="True" Grid.Row="1">
            <TextBlock TextWrapping="Wrap" Name="tbStatus"/>
        </ScrollViewer>
    </Grid>
</Page>
